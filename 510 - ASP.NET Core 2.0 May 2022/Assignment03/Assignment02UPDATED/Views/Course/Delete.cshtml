    ViewData["Title"] = "Delete";
    CourseModel course = TempData["coursebyid"] as CourseModel;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CourseModel</h4>
    <div class="col-md-4">
